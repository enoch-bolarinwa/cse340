<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
    <% errors.forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<div class="account-management">
  <h2>You're logged in</h2>
  
  <%- include('../partials/head') %>
<%- include('../partials/header') %>
<%- include('../partials/navigation') %>

<h1><%= title %></h1>

<%- messages() %>

<% if (locals.loggedin) { %>
  <h2>Welcome <%= accountData.account_firstname %></h2>
  
  <!-- Update account link for ALL users -->
  <p><a href="/account/update/<%= accountData.account_id %>">Update Account Information</a></p>
  
  <!-- Inventory Management - only for Employee/Admin -->
  <% if (accountData.account_type === 'Employee' || accountData.account_type === 'Admin') { %>
    <h3>Inventory Management</h3>
    <p><a href="/inventory/">Manage Inventory</a></p>
  <% } %>
<% } %>

<%- include('../partials/footer') %>
  <% if (locals.accountData) { %>
    <p>Welcome, <%= accountData.account_firstname %> <%= accountData.account_lastname %>!</p>
    <p>Email: <%= accountData.account_email %></p>
    <p>Account Type: <%= accountData.account_type %></p>
  <% } %>
  
  <div class="account-links">
    <a href="/account/update">Update Account</a>
    <a href="/inv/" class="admin-link">Inventory Management</a>
  </div>
</div>